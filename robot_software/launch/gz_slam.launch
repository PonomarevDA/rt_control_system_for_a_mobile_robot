<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="enable_move_base" default="true" doc="[true, false]"/>
  <arg name="mapping_algorithm" default="gmapping" doc="[gmapping, hector_mapping]"/>
  <arg name="initial_pose_x"    default="0.0"/>
  <arg name="initial_pose_y"    default="0.0"/>
  <arg name="initial_pose_yaw"  default="0.0"/>

  <!-- 1. Spawn model -->
  <include file="$(find robot_software)/launch/simulation/gz_spawn_model.launch">
  </include>

  <!-- 2. Navigation settings -->
  <group if="$(arg enable_move_base)">
    <include file="$(find robot_software)/launch/navigation_stack/slam_stack.launch">
      <arg name="mapping_algorithm" value="$(arg mapping_algorithm)"/>
    </include>
  </group>
  <group unless="$(arg enable_move_base)">
    <include file="$(find robot_software)/launch/teleop_gui.launch"/>
    <include file="$(find robot_software)/launch/navigation_stack/$(arg mapping_algorithm).launch"/>
  </group>
</launch>
